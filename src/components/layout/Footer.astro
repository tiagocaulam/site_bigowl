---
// src/components/layout/Footer.astro
const currentYear = new Date().getFullYear();
const base = import.meta.env.BASE_URL;

// Links do rodapé com os caminhos base corretos
const footerLinks = [
  { href: `${base}`, text: "Home" },
  { href: `${base}produtos/`, text: "Produtos" },
  { href: `${base}sobre/`, text: "Sobre Nós" },
  { href: `${base}contatos/`, text: "Contatos" },
];
---
<footer class="footer">
  <div class="container">
    <div class="footer__social">
      <a href="#" aria-label="Instagram" class="footer__icon">
        <span class="material-symbols-outlined">photo_camera</span>
      </a>
      <a href="#" aria-label="Facebook" class="footer__icon">
        <span class="material-symbols-outlined">facebook</span>
      </a>
      <a href="#" aria-label="Twitter" class="footer__icon">
        <span class="material-symbols-outlined">sms</span>
      </a>
    </div>
    <nav class="footer__nav">
      {footerLinks.map(link => (
        <a href={link.href}>{link.text}</a>
      ))}
    </nav>
    <div class="footer__copy">
      Copyright © {currentYear} <br> <span>BIG OWL</span> TCG Store 
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-dark);
    color: var(--color-text-light);
    font-family: var(--font-body);
    box-shadow: 0 8px 24px 0 rgba(0,0,0,0.25);
    padding: 2.5rem 0 0.5rem 0;
    margin-top: 4rem;
  }
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }
  .footer__social {
    display: flex;
    justify-content: center;
    gap: 1.5rem; /* Reduzido um pouco */
  }
  .footer__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #222;
    border-radius: 50%;
    width: 56px;
    height: 56px;
    color: var(--color-text-light);
    transition: background 0.2s, color 0.2s, transform 0.2s;
    box-shadow: 0 2px 8px 0 rgba(0,0,0,0.15);
  }
  .footer__icon .material-symbols-outlined {
    font-size: 2rem; /* 32px */
  }
  .footer__icon:hover {
    background: var(--color-primary);
    color: #fff;
    transform: scale(1.1);
  }
  .footer__nav {
    display: flex;
    flex-wrap: wrap; /* Para telas pequenas */
    justify-content: center;
    gap: 2.5rem;
    font-size: 1rem; /* Ajustado para tamanho mais comum */
  }
  .footer__nav a {
    color: var(--color-text-light);
    text-decoration: none;
    transition: color 0.2s;
  }
  .footer__nav a:hover {
    color: var(--color-primary);
  }
  .footer__copy {
    background: #000;
    text-align: center;
    padding: 0.75rem 1.5rem; /* Aumentado o padding lateral */
    font-size: 0.9rem; /* Ajustado */
    color: var(--color-text-light);
    letter-spacing: 0.02em;
    width: 100%; /* Ocupa a largura total da cor de fundo */
    box-sizing: border-box; /* Garante que o padding não aumente a largura */
  }
  .footer__copy span {
    color: var(--color-primary);
    font-weight: 500;
    letter-spacing: 0.05em;
  }
</style>