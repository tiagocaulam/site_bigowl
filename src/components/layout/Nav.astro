---
const { pathname } = Astro.url;
const base = import.meta.env.BASE_URL;

const navLinks = [
  { href: `${base}`, text: "Home" },
  { href: `${base}produtos/`, text: "Produtos" },
  { href: `${base}sobre/`, text: "Sobre NÃ³s" },
  { href: `${base}contatos/`, text: "Contatos" },
];
---
<nav>
  <button class="hamburger" id="menu-toggle" aria-label="Abrir menu" onclick="document.getElementById('mobile-menu').classList.toggle('open')">
    <span></span><span></span><span></span>
  </button>
  <ul class="nav-list">
    {navLinks.map(link => {
      const isActive = link.href === base ? pathname === link.href : pathname.startsWith(link.href);
      return (
        <li>
          <a href={link.href} class:list={{ active: isActive }}>
            {link.text}
          </a>
        </li>
      );
    })}
  </ul>
  <div id="mobile-menu" class="mobile-menu">
    <button class="close-menu" aria-label="Fechar menu" onclick="document.getElementById('mobile-menu').classList.remove('open')">&times;</button>
    <ul>
      {navLinks.map(link => (
        <li><a href={link.href}>{link.text}</a></li>
      ))}
    </ul>
  </div>
</nav>

<style>
  .nav-list {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 38px;
    height: 38px;
    background: none;
    border: none;
    cursor: pointer;
    margin-right: 1rem;
    z-index: 1002;
  }
  .hamburger span {
    display: block;
    width: 28px;
    height: 4px;
    margin: 4px 0;
    background: var(--color-primary);
    border-radius: 2px;
    transition: 0.2s;
  }
  .close-menu {
    position: absolute;
    top: 18px;
    right: 18px;
    background: none;
    border: none;
    font-size: 2.2rem;
    color: var(--color-primary);
    cursor: pointer;
    z-index: 1003;
  }
  .mobile-menu {
    display: none;
    position: fixed;
    top: 0;
    right: 0;
    width: 220px;
    height: 100vh;
    background: #fff;
    box-shadow: -2px 0 16px 0 rgba(44,62,80,0.13);
    z-index: 1001;
    padding: 2.2rem 1.2rem 1.2rem 1.2rem;
    transition: transform 0.22s;
    transform: translateX(100%);
  }
  .mobile-menu.open {
    display: block;
    transform: translateX(0);
  }
  .mobile-menu ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  .mobile-menu a {
    color: var(--color-primary);
    font-size: 1.15rem;
    text-decoration: none;
    font-weight: 600;
    padding: 0.5rem 0;
    display: block;
  }
  @media (max-width: 900px) {
    .nav-list {
      display: none;
    }
    .hamburger {
      display: flex;
    }
    .mobile-menu {
      display: block;
    }
  }
  nav a {
    text-decoration: none;
    color: var(--color-text-dark);
    font-weight: 500;
    transition: color 0.2s;
    padding-bottom: 0.25rem;
    border-bottom: 2px solid transparent;
  }
  nav a:hover {
    color: var(--color-primary);
  }
  nav a.active {
    color: var(--color-primary);
    font-weight: 700;
    border-bottom-color: var(--color-primary);
  }
</style>