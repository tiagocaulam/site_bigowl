---
// src/components/layout/Nav.astro
const navLinks = [
  { href: "/", text: "Home" },
  { href: "/produtos", text: "Produtos" },
  { href: "/sobre", text: "Sobre Nós" },
  { href: "/duvidas", text: "Dúvidas" },
  { href: "/contatos", text: "Contatos" },
]
---
<nav>
  <ul>
    {navLinks.map(link => (
      <li><a href={link.href}>{link.text}</a></li>
    ))}
  </ul>
</nav>

<style>
  nav ul {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  nav a {
    text-decoration: none;
    color: var(--color-text-dark);
    font-weight: 500;
    transition: color 0.2s;
  }
  nav a:hover {
    color: var(--color-primary);
  }
</style>