<style>
  header {
    background-color: var(--color-text-light);
    border-bottom: 1px solid #e2e8f0;
    padding: 1rem 0;
  }
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .user-actions {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }
  
  .social-icon {
    color: var(--color-primary); 
    text-decoration: none;
    transition: opacity 0.2s ease, transform 0.2s ease;
  }
  .social-icon:hover {
    opacity: 0.7; 
    transform: scale(1.1);
  }

  .social-icon svg {
    width: 24px;
    height: 24px;
    vertical-align: middle;
    fill: currentColor;
  }
   .shopee-icon svg {
    transform: translateY(-2px); /* Ajuste o valor conforme necessário */
  }
</style>