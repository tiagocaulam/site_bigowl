---
// src/components/layout/Header.astro
import Logo from '../ui/Logo.astro';
import Nav from './Nav.astro';
// --- MUDANÇA AQUI (INÍCIO) ---
const base = import.meta.env.BASE_URL;
---
<header>
  <div class="container header-container">
    <Logo />
    <Nav />
    <div class="user-actions">
      {/* Adicionamos a variável 'base' e a barra final para corrigir os links */}
      <a href={`${base}busca/`} aria-label="Buscar">
        <span class="material-symbols-outlined">search</span>
      </a>
      <a href={`${base}perfil/`} aria-label="Perfil">
        <span class="material-symbols-outlined">person</span>
      </a>
      <a href={`${base}carrinho/`} aria-label="Carrinho">
        <span class="material-symbols-outlined">shopping_cart</span>
      </a>
      {/* --- MUDANÇA AQUI (FIM) --- */}
    </div>
  </div>
</header>

<style>
  /* Seu CSS está perfeito, nenhuma mudança necessária aqui */
  header {
    background-color: var(--color-text-light);
    border-bottom: 1px solid #e2e8f0;
    padding: 1rem 0;
  }
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .user-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }
  
  .user-actions a {
    color: var(--color-primary); 
    text-decoration: none;
    transition: opacity 0.2s ease;
  }
  .user-actions a:hover {
    opacity: 0.7; 
  }
  .material-symbols-outlined {
    font-size: 28px;
    vertical-align: middle;
  }
</style>