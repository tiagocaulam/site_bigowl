---
import Logo from '../ui/Logo.astro';
import Nav from './Nav.astro';
---
<header>
  <div class="container header-container">
    <Logo />
    <Nav />
    <div class="user-actions">
      <a href="/busca" aria-label="Buscar">
        <span class="material-symbols-outlined">search</span>
      </a>
      <a href="/perfil" aria-label="Perfil">
        <span class="material-symbols-outlined">person</span>
      </a>
      <a href="/carrinho" aria-label="Carrinho">
        <span class="material-symbols-outlined">shopping_cart</span>
      </a>
    </div>
  </div>
</header>

<style>
  header {
    background-color: var(--color-text-light);
    border-bottom: 1px solid #e2e8f0;
    padding: 1rem 0;
  }
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .user-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }
  
  /* --- MUDANÇA AQUI --- */
  .user-actions a {
    /* Mude de --color-text-dark para --color-primary */
    color: var(--color-primary); 
    text-decoration: none;
    transition: opacity 0.2s ease; /* Mudei a transição para opacidade */
  }
  .user-actions a:hover {
    /* Adicionei um efeito de hover para dar feedback visual */
    opacity: 0.7; 
  }
  .material-symbols-outlined {
    font-size: 28px;
    vertical-align: middle;
  }
</style>