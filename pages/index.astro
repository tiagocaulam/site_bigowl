---
// 1. Importar o Layout
// O caminho está correto, pois 'layouts' está dentro de 'src'.
// Apenas ajustei para 'layout.astro' com 'l' minúsculo, como na sua imagem.
import Layout from '../layouts/layout.astro';

// 2. Importar o Componente de Card
// CORREÇÃO: Subimos dois níveis (../..) para sair de 'src/pages' e encontrar a pasta 'components' na raiz.
import ProductCard from '../../src/components/products/ProductCard.astro';

// 3. Importar os Dados dos Produtos
// CORREÇÃO: Subimos dois níveis (../..) para sair de 'src/pages' e encontrar a pasta 'data' na raiz.
import { products } from '../../src/data/products.js';
---

<Layout>
  <div class="product-grid">
    {products.map(product => (
      <ProductCard product={product} />
    ))}
  </div>
</Layout>